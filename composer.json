{
  "name": "fev/sorter",
  "description": "Simple library for sorting arrays.",
  "keywords": ["sorting", "array"],
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "FEV",
      "email": "trafaret@trafaret.kiev.ua",
      "role": "Maintainer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "FEV\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FEV\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
    "tests": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
